
<div id="blogForm">
	<h3 class="headline">Create New Post</h3>
	<form class="form-horizontal" action="/admin" method="post" enctype="multipart/form-data">
		<div class="form-group">
			<label for="author" class="formLabel">Author:</label>
			<select id="author" class="form-control" name="author">
				<option value="Kevin H">Kevin H</option>
			</select>			
		</div>
		<div class="form-group">
			<label for="title" class="formLabel">Title:</label>
			<input id="title" class="form-control" type="text" name="title">
		</div>
		<div class="form-group">
			<label for="post" class="formLabel">Body:</label>
			<textarea id="summernote" name="body" class="form-control" type="text" ></textarea>		
		</div>
		<div id="blogPicture"><input type="file" name="blogPic"></div>

		<br>
		<button type="submit" class="btn btn-default">Submit</button>
	</form>
</div>

<link rel="stylesheet" type="text/css" href="/summernote/summernote.css">

<script src="/summernote/summernote.min.js"></script>
<script>
	$(document).ready(function(){
		$('#summernote').summernote({
			height: 300, 
			minHeight: null,
			maxHeight: null,
			focus: true
		});
	});
</script>